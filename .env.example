# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/evently_db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=20

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Configuration
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Configuration
DEBUG=false
ENVIRONMENT=development

# Email Configuration (for notifications)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=true

# Booking Configuration
BOOKING_HOLD_TIMEOUT_MINUTES=15
MAX_BOOKING_QUANTITY=10

# TESTING Configuration
# These URLs will be used when running tests to keep test data separate from production data
# Make sure to create separate test databases and use different Redis database numbers

# Test Database - REQUIRED for running tests with migrations
# Create a separate database for testing (e.g., evently_test_db)
DATABASE_URL_TEST=postgresql+asyncpg://neondb_owner:your-test-password@localhost:5432/evently_test_db

# Test Redis - Optional (will use different database numbers if not specified)
REDIS_URL_TEST=redis://localhost:6379/3
CELERY_BROKER_URL_TEST=redis://localhost:6379/4
CELERY_RESULT_BACKEND_TEST=redis://localhost:6379/5